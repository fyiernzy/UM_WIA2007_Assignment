<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#D37D6C" /> <!-- Change to your desired color -->
            <corners android:radius="20dp" /> <!-- Optional: Add rounded corners -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="@color/pink" /> <!-- Change to your desired color -->
            <corners android:radius="20dp" /> <!-- Optional: Add rounded corners -->
        </shape>
    </item>
</selector>