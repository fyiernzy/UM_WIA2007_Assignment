<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android" android:oneshot="false">
    <!-- Fade in -->
    <item android:drawable="@drawable/cursor_10_percent" android:duration="100" />
    <item android:drawable="@drawable/cursor_20_percent" android:duration="100" />
    <item android:drawable="@drawable/cursor_40_percent" android:duration="100" />
    <item android:drawable="@drawable/cursor_60_percent" android:duration="100" />
    <item android:drawable="@drawable/cursor_80_percent" android:duration="100" />

    <!-- Fade out -->
    <item android:drawable="@drawable/cursor_80_percent" android:duration="100" />
    <item android:drawable="@drawable/cursor_60_percent" android:duration="100" />
    <item android:drawable="@drawable/cursor_40_percent" android:duration="100" />
    <item android:drawable="@drawable/cursor_20_percent" android:duration="100" />
    <item android:drawable="@drawable/cursor_10_percent" android:duration="100" />
    <item android:drawable="@drawable/cursor_0_percent" android:duration="100" />
</animation-list>

