<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UserProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#FFCA9C">

                <ImageView
                    android:id="@+id/profilePic_profilepage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/baseline_person_24" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profilePic_profilepage"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_alignLeft="@id/profilePic_profilepage">

                    <TextView
                        android:id="@+id/textView_show_welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi, "
                        android:fontFamily="@font/inter_semibold"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textView_show_welcome_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="User"
                        android:text=""
                        android:fontFamily="@font/inter_semibold"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="@color/black"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:id="@+id/edit_profile_image"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/baseline_edit_24"/>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:background="@color/white">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_centerVertical="true"
                    android:id="@+id/progressBar"
                    android:layout_centerHorizontal="true"
                    android:elevation="10dp"
                    android:visibility="gone"/>

                <!---Show full name -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/ic_profile"
                    android:background="@drawable/baseline_person_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_show_full_name"
                    android:layout_alignStart="@id/ic_profile"
                    android:hint="Loading..."
                    android:layout_marginStart="50dp"
                    android:textSize="18sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/textview_show_full_name"
                    android:background="@color/dark_grey"
                    android:id="@+id/divider_name"/>


                <!---Show email -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/ic_email"
                    android:background="@drawable/baseline_email_24"
                    android:layout_below="@id/divider_name"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_show_email"
                    android:layout_alignStart="@id/ic_email"
                    android:hint="Loading..."
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/divider_name"
                    android:textSize="18sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/textview_show_email"
                    android:id="@+id/divider_email"
                    android:background="@color/dark_grey"/>


                <!---Show username -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/ic_username"
                    android:background="@drawable/baseline_person_24"
                    android:layout_below="@id/divider_email"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_show_username"
                    android:layout_alignStart="@id/ic_email"
                    android:hint="Loading..."
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/divider_email"
                    android:textSize="18sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/textview_show_username"
                    android:id="@+id/divider_username"
                    android:background="@color/dark_grey"/>

                <!---Show gender -->
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/ic_gender"
                    android:background="@drawable/img_gender"
                    android:layout_below="@id/divider_username"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_show_gender"
                    android:layout_alignStart="@id/ic_username"
                    android:hint="Loading..."
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/divider_username"
                    android:textSize="18sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/textview_show_gender"
                    android:id="@+id/divider_gender"
                    android:background="@color/dark_grey"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/inter"
                    android:text="Reminder: Please upload/update the profile picture by pressing the photo!"
                    android:textColor="@color/dark_grey"
                    android:layout_below="@+id/divider_gender"
                    android:textSize="18sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="174dp"
                android:layout_height="257dp"
                android:layout_gravity="right"
                android:layout_marginTop="-330dp"
                android:background="@drawable/img_girl_power" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
