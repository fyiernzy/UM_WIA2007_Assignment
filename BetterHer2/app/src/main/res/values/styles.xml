<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ... other styles for your app ... -->
    </style>

    <!-- Button Style -->
    <style name="PinkButton">
        <!-- Background color when pressed -->
        <item name="android:background">@drawable/button_background</item>

        <!-- Text color -->
        <item name="android:textColor">@color/white</item>

        <!-- Padding -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

        <!-- Add more attributes as needed -->
    </style>

    <style name="OptionButton">
        <!-- Background color when pressed -->
        <item name="android:background">@drawable/option_background</item>

        <!-- Text color -->
        <item name="android:textColor">@color/white</item>

        <!-- Padding -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

        <!-- Add more attributes as needed -->
    </style>
    <style name="SectionTitleStyle" parent="MainFontStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PageTitleStyle" parent="MainFontStyle">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="MainFontStyle">
    </style>

</resources>